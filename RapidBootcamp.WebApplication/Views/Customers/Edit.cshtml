@model RapidBootcamp.WebApplication.Models.Customer;
<html>
<body>
    <h2>EDIT CUSTOMER</h2>
    <form action="/Customers/Edit" method="post">
        <input type="hidden" value="@Model.CustomerId" name="CustomerId" />
        <div>
            <label for="customerName">Customer Name</label>
            <input type="text" value="@Model.CustomerName" name="CustomerName" />

            <label for="Address">Address</label>
            <input type="text" value="@Model.Address" name="Address" />

            <label for="City">City</label>
            <input type="text" value="@Model.City" name="City" />

            <label for="Email">Email</label>
            <input type="text" value="@Model.Email" name="Email" />

            <label for="PhoneNumber">PhoneNumber</label>
            <input type="text" value="@Model.PhoneNumber" name="PhoneNumber" />
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</body>
</html>